{
  // Editor
  "editor.acceptSuggestionOnEnter": "off",
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.detectIndentation": false,
  "editor.folding": true,
  "editor.fontFamily": "Cascadia Code PL, Consolas, Courier New, monospace",
  "editor.fontSize": 14,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.minimap.maxColumn": 200,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.renderIndentGuides": true,
  "editor.renderLineHighlight": "all",
  "editor.rulers": [
    80
  ],
  "editor.selectionHighlight": true,
  "editor.smoothScrolling": true,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,

  // Explorer
  "explorer.autoReveal": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": true,

  // Files
  "files.autoGuessEncoding": true,
  "files.encoding": "utf8bom",
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // Disable Telemetry
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,

  // Style
  "terminal.integrated.fontFamily": "'Cascadia Code PL', Consolas, 'Courier New', monospace",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.showIcons": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.settings.enableNaturalLanguageSearch": false,

  // Languages
  "powershell.codeFormatting.newLineAfterCloseBrace": true,
  "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationAfterEveryPipeline",
  "powershell.codeFormatting.useCorrectCasing": true,
  "powershell.integratedConsole.focusConsoleOnExecute": false,
  "powershell.powerShellDefaultVersion": "Windows PowerShell (x64)",
  "powershell.scriptAnalysis.enable": true,
  "powershell.startAutomatically": true,
  "[powershell]": {
    "editor.defaultFormatter": "ms-vscode.powershell-preview",
    "editor.formatOnSave": true,
    "editor.wordWrap": "wordWrapColumn"
  },
  "[python]": {
    "editor.wordWrap": "wordWrapColumn"
  },
  "files.defaultLanguage": "powershell",
  "markdown.extension.orderedList.marker": "one",
  "markdown.extension.print.theme": "dark",
  "python.languageServer": "Microsoft",
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
  "window.zoomLevel": 1,
  "yaml.schemas": {
    "file:///toc.schema.json": "/toc\\.yml/i"
  },
  "yaml.format.singleQuote": true,

  // Misc
  "breadcrumbs.enabled": true,
  "code-runner.saveFileBeforeRun": true,
  "update.mode": "start",

  // Taken from https://www.youtube.com/watch?v=WaTw6zwhiHM
  // TODO: Merge with settings above once confirmed stable

  // Extensions
  "bracket-pair-colorizer-2.highlightActiveScope": true,
  "bracket-pair-colorizer-2.rulerPosition": "Full",
  "bracket-pair-colorizer-2.showBracketsInRuler": true,

  // Editor
  "editor.autoClosingQuotes": "beforeWhitespace",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.snippetSuggestions": "bottom",
  "editor.suggest.snippetsPreventQuickSuggestions": false,

  // Files
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 10000,
  "files.hotExit": "onExitAndWindowClose",

  // PowerShell
  "powershell.buttons.showRunButtons": false,
  "powershell.codeFormatting.autoCorrectAliases": true,
  "powershell.codeFormatting.newLineAfterOpenBrace": true,
  "powershell.codeFormatting.openBraceOnSameLine": true,
  "powershell.codeFormatting.preset": "OTBS",
  "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
  "powershell.codeFormatting.useConstantStrings": true,
  "powershell.codeFormatting.whitespaceAfterSeparator": true,
  "powershell.codeFormatting.whitespaceBetweenParameters": true,
  "powershell.integratedConsole.suppressStartupBanner": true,
  "powershell.promptToUpdatePowerShell": false,
  "powershell.sideBar.CommandExplorerVisibility": false,

  // Remote SSH
  "remote.SSH.connectTimeout": 30,
  "remote.SSH.defaultExtensions": [
    "formulahendry.docker-explorer",
    "ms-vscode-remote.remote-containers"
  ],
  "remote.SSH.enableDynamicForwarding": true,
  "remote.SSH.localServerDownload": "off",
  "remote.SSH.showLoginTerminal": true,
  "remote.SSH.suppressWindowsSshWarning": true,

  // Terminal
  "terminal.explorerKind": "external",
  "terminal.external.windowsExec": "wt",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.experimentalUseTitleEvent": true,
  "terminal.integrated.scrollback": 9999,
  "terminal.integrated.shellArgs.windows": [
    "-NoLogo"
  ],
  "window.title": "${dirty}${activeEditorShort} | ${rootName}",
  "workbench.editor.scrollToSwitchTabs": true,
  "workbench.startupEditor": "newUntitledFile",
  "codespaces.accountProvider": "Microsoft",
  "editor.largeFileOptimizations": false,
}